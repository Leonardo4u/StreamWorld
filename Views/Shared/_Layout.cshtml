<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - StreamWorld</title>

    <!-- BOOTSTRAP 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            background-color: #121212;
            color: #f1f1f1;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background-color: #1f1f1f !important;
            z-index: 1030;
            position: relative;
        }

        .navbar-brand, .nav-link {
            color: #f1f1f1 !important;
            font-weight: 500;
        }

            .navbar-brand:hover, .nav-link:hover {
                opacity: 0.75;
            }

        a {
            color: #bb86fc;
        }

            a:hover {
                color: #9b6ee0;
            }

        .dropdown-menu {
            background-color: #2b2b2b;
            z-index: 9999 !important;
            position: absolute !important;
        }

        .nav-item.dropdown {
            position: relative;
        }

        .dropdown-item {
            color: #f1f1f1;
        }

            .dropdown-item:hover {
                background-color: #444;
                color: #fff;
            }

        /* BOTÕES ROXOS COM ANIMAÇÃO */
        .btn-primary-custom {
            background: linear-gradient(45deg, #6f42c1, #bb86fc);
            border: none;
            color: #fff;
            font-weight: 500;
            transition: all 0.3s ease;
            background-size: 200% 200%;
        }

            .btn-primary-custom:hover {
                background-position: 100% 0;
                transform: scale(1.08);
                box-shadow: 0 6px 20px rgba(0,0,0,0.4);
            }

        .btn-outline-custom {
            border: 2px solid #bb86fc;
            color: #bb86fc;
            background-color: transparent;
            transition: all 0.3s ease;
            background-size: 200% 200%;
        }

            .btn-outline-custom:hover {
                background: linear-gradient(45deg, #6f42c1, #bb86fc);
                color: #fff;
                transform: scale(1.08);
                box-shadow: 0 6px 20px rgba(0,0,0,0.4);
                background-position: 100% 0;
            }

        main {
            flex: 1 0 auto; /* ocupa espaço restante */
            overflow-y: auto; /* scroll só se necessário */
        }

        footer {
            background-color: #1f1f1f;
            color: #f1f1f1;
            flex-shrink: 0;
        }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">StreamWorld</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMenu">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index">Produções</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Artistas" asp-action="Index">Artistas</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="Index">Contato</a></li>
                        @if (User?.Identity?.IsAuthenticated == true && User.HasClaim("Role", "Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminMenu" data-bs-toggle="dropdown" aria-expanded="false">Admin</a>
                                <ul class="dropdown-menu" aria-labelledby="adminMenu">
                                    <li><a class="dropdown-item" asp-controller="AdminHome" asp-action="Index">Painel</a></li>
                                    <li><a class="dropdown-item" asp-controller="Genres" asp-action="Index">Gêneros</a></li>
                                    <li><a class="dropdown-item" asp-controller="Artists" asp-action="Index">Artistas</a></li>
                                    <li><a class="dropdown-item" asp-controller="Productions" asp-action="Index">Produções</a></li>
                                    <li><a class="dropdown-item" asp-controller="Messages" asp-action="Index">Mensagens</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Sair</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Admin</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN -->
    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="mt-auto">
        <div class="container text-center py-3">
            &copy; @DateTime.Now.Year - StreamWorld - <a asp-controller="Home" asp-action="Privacy">Privacidade</a>
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
