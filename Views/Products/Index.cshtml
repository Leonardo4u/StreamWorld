@model IEnumerable<StreamWorld.Models.Producao>

@{
    ViewData["Title"] = "Produtos";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center" style="color:#f1f1f1;">Produtos</h1>

    @{
        var currentSearch = ViewBag.Search as string;
        var currentGenre = ViewBag.GeneroId as int?;
        var currentArtist = ViewBag.ArtistaId as int?;
        var currentSort = ViewBag.Sort as string ?? "title_asc";
        var page = (int)(ViewBag.Page ?? 1);
        var totalPages = (int)(ViewBag.TotalPages ?? 1);
    }

    <form method="get" class="mb-3">
        <div class="row g-2">
            <div class="col-md-4">
                <input type="text" name="search" value="@currentSearch" placeholder="Buscar por título..." class="form-control bg-dark text-white border-secondary" />
            </div>
            <div class="col-md-3">
                <select name="generoId" class="form-select bg-dark text-white border-secondary">
                    <option value="">Todos gêneros</option>
                    @foreach (var g in (ViewBag.Generos as IEnumerable<StreamWorld.Models.Genero> ?? Enumerable.Empty<StreamWorld.Models.Genero>()))
                    {
                        <option value="@g.Id" selected="@(currentGenre == g.Id)">@g.Nome</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <select name="artistaId" class="form-select bg-dark text-white border-secondary">
                    <option value="">Todos artistas</option>
                    @foreach (var a in (ViewBag.Artistas as IEnumerable<StreamWorld.Models.Artista> ?? Enumerable.Empty<StreamWorld.Models.Artista>()))
                    {
                        <option value="@a.Id" selected="@(currentArtist == a.Id)">@a.Nome</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <select name="sort" class="form-select bg-dark text-white border-secondary">
                    <option value="title_asc" selected="@(currentSort == "title_asc")">Título ↑</option>
                    <option value="title_desc" selected="@(currentSort == "title_desc")">Título ↓</option>
                    <option value="date_asc" selected="@(currentSort == "date_asc")">Data ↑</option>
                    <option value="date_desc" selected="@(currentSort == "date_desc")">Data ↓</option>
                </select>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary-custom">Buscar</button>
            </div>
        </div>
    </form>

    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>Título</th>
                <th>Ano</th>
                <th>Tipo</th>
                <th>Gênero</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(item.LinkCapa))
                        {
                            <img src="@item.LinkCapa" alt="Capa" style="height:60px;width:auto;margin-right:8px;vertical-align:middle;" />
                        }
                        else
                        {
                            <img src="/wwwroot/img/placeholder-capa.png" alt="Sem capa" style="height:60px;width:auto;margin-right:8px;vertical-align:middle;opacity:0.5;" />
                        }
                        @item.Titulo
                    </td>
                    <td>
                        @if (item.AnoCriacao.HasValue)
                        {
                            @item.AnoCriacao
                        }
                        else if (item.DataLancamento.HasValue)
                        {
                            @item.DataLancamento.Value.Year
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td>@item.Tipo</td>
                    <td>@item.Genero?.Nome</td>
                    <td>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-custom btn-sm">Detalhes</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(page <= 1 ? "disabled" : "")">
                <a class="page-link bg-dark text-white border-secondary" href="?search=@currentSearch&genreId=@currentGenre&artistId=@currentArtist&sort=@currentSort&page=@(page - 1)">Anterior</a>
            </li>
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == page ? "active" : "")">
                    <a class="page-link bg-dark text-white border-secondary" href="?search=@currentSearch&genreId=@currentGenre&artistId=@currentArtist&sort=@currentSort&page=@i">@i</a>
                </li>
            }
            <li class="page-item @(page >= totalPages ? "disabled" : "")">
                <a class="page-link bg-dark text-white border-secondary" href="?search=@currentSearch&genreId=@currentGenre&artistId=@currentArtist&sort=@currentSort&page=@(page + 1)">Próxima</a>
            </li>
        </ul>
    </nav>
</div>

