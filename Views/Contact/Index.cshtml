@model StreamWorld.Models.MensagemContato

@{
    ViewData["Title"] = "Contato";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center" style="color:#f1f1f1;">Contato</h1>

    @if (ViewData["Success"] != null)
    {
        <div class="alert alert-success bg-success text-white border-0">Mensagem enviada com sucesso.</div>
    }

    <form asp-action="Send" method="post">
        <div class="mb-3">
            <label asp-for="Nome" class="form-label" style="color:#f1f1f1;"></label>
            <input asp-for="Nome" class="form-control bg-dark text-white border-secondary" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label" style="color:#f1f1f1;"></label>
            <input asp-for="Email" class="form-control bg-dark text-white border-secondary" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Mensagem" class="form-label" style="color:#f1f1f1;"></label>
            <textarea asp-for="Mensagem" class="form-control bg-dark text-white border-secondary" rows="5"></textarea>
            <span asp-validation-for="Mensagem" class="text-danger"></span>
        </div>
        <button class="btn btn-primary-custom" type="submit">Enviar</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .btn-primary-custom {
        background: linear-gradient(45deg, #6f42c1, #bb86fc);
        border: none;
        color: #fff;
        font-weight: 500;
        transition: all 0.3s ease;
        background-size: 200% 200%;
    }

        .btn-primary-custom:hover {
            background-position: 100% 0;
            transform: scale(1.08);
            box-shadow: 0 6px 20px rgba(0,0,0,0.4);
        }

    input.form-control, textarea.form-control {
        background-color: #1f1f1f;
        color: #f1f1f1;
        border-color: #2b2b2b;
    }

    .alert-success {
        background-color: #28a745;
        color: #fff;
    }
</style>
