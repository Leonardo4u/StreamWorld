@model IEnumerable<StreamWorld.Models.Producao>

@{
    ViewData["Title"] = "Produções - Administração";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center" style="color:#f1f1f1;">Produções</h1>

    <p class="text-center mb-4">
        <a asp-action="Create" class="btn btn-primary-custom">Criar Produção</a>
    </p>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Título</th>
                <th>Tipo</th>
                <th>Gênero</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="https://br.web.img3.acsta.net/c_310_420/medias/nmedia/18/90/95/91/20122128.jpg"
                             alt="Capa do filme"
                             style="height:60px;width:auto;margin-right:8px;vertical-align:middle;" />
                        @item.Titulo
                    </td>
                    <td>@item.Tipo</td>
                    <td>@item.Genero?.Nome</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-custom btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-custom btn-sm">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .btn-primary-custom {
        background: linear-gradient(45deg, #6f42c1, #bb86fc);
        border: none;
        color: #fff;
        font-weight: 500;
        transition: all 0.3s ease;
        background-size: 200% 200%;
    }

        .btn-primary-custom:hover {
            background-position: 100% 0;
            transform: scale(1.08);
            box-shadow: 0 6px 20px rgba(0,0,0,0.4);
        }

    .btn-outline-custom {
        border: 2px solid #bb86fc;
        color: #bb86fc;
        background-color: transparent;
        transition: all 0.3s ease;
        background-size: 200% 200%;
    }

        .btn-outline-custom:hover {
            background: linear-gradient(45deg, #6f42c1, #bb86fc);
            color: #fff;
            transform: scale(1.08);
            box-shadow: 0 6px 20px rgba(0,0,0,0.4);
            background-position: 100% 0;
        }

    table.table {
        color: #f1f1f1;
        border-color: #2b2b2b;
    }

        table.table th, table.table td {
            vertical-align: middle;
        }

    table.table-striped tbody tr:nth-of-type(odd) {
        background-color: #1f1f1f;
    }

    table.table-striped tbody tr:nth-of-type(even) {
        background-color: #2b2b2b;
    }
</style>
