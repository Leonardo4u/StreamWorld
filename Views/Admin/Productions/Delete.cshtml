@model StreamWorld.Models.Producao

@{
    ViewData["Title"] = "Excluir Produção";
}

<h1>Excluir Produção</h1>

<div class="alert alert-warning">Tem certeza que deseja excluir esta produção?</div>

<dl class="row">
    <dt class="col-sm-2">Título</dt>
    <dd class="col-sm-10">@Model.Titulo</dd>
    <dt class="col-sm-2">Gênero</dt>
    <dd class="col-sm-10">@Model.Genero?.Nome</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger" type="submit">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
 </form>
