@model StreamWorld.Models.Artista

@{
    ViewData["Title"] = "Editar Artista";
}

<h1>Editar Artista</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Tipo" class="form-label"></label>
        <select asp-for="Tipo" class="form-select">
            <option value="Artista" selected="@(Model.Tipo == "Artista")">Artista</option>
            <option value="Diretor" selected="@(Model.Tipo == "Diretor")">Diretor</option>
        </select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DataNascimento" class="form-label"></label>
        <input asp-for="DataNascimento" class="form-control" type="date" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PaisOrigem" class="form-label"></label>
        <input asp-for="PaisOrigem" class="form-control" placeholder="Ex: Brasil, Estados Unidos, FranÃ§a..." />
        <span asp-validation-for="PaisOrigem" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LinkFoto" class="form-label"></label>
        <input asp-for="LinkFoto" class="form-control" placeholder="https://..." />
        <span asp-validation-for="LinkFoto" class="text-danger"></span>
    </div>
    <button class="btn btn-primary" type="submit">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
