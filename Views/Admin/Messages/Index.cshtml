@model IEnumerable<StreamWorld.Models.MensagemContato>

@{
    ViewData["Title"] = "Mensagens - Administração";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center" style="color:#f1f1f1;">Mensagens de Contato</h1>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Remetente</th>
                <th>Email</th>
                <th>Enviado</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                    <td>@item.EnviadoEm.ToLocalTime()</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-custom btn-sm">Ver</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .btn-primary-custom {
        background: linear-gradient(45deg, #6f42c1, #bb86fc);
        border: none;
        color: #fff;
        font-weight: 500;
        transition: all 0.3s ease;
        background-size: 200% 200%;
    }

        .btn-primary-custom:hover {
            background-position: 100% 0;
            transform: scale(1.08);
            box-shadow: 0 6px 20px rgba(0,0,0,0.4);
        }

    .btn-outline-custom {
        border: 2px solid #bb86fc;
        color: #bb86fc;
        background-color: transparent;
        transition: all 0.3s ease;
        background-size: 200% 200%;
    }

        .btn-outline-custom:hover {
            background: linear-gradient(45deg, #6f42c1, #bb86fc);
            color: #fff;
            transform: scale(1.08);
            box-shadow: 0 6px 20px rgba(0,0,0,0.4);
            background-position: 100% 0;
        }

    table.table {
        color: #f1f1f1;
        border-color: #2b2b2b;
    }

        table.table th, table.table td {
            vertical-align: middle;
        }

    table.table-striped tbody tr:nth-of-type(odd) {
        background-color: #1f1f1f;
    }

    table.table-striped tbody tr:nth-of-type(even) {
        background-color: #2b2b2b;
    }
</style>
